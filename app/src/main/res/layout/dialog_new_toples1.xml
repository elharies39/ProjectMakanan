<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Baru"
        android:textSize="24sp"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_dl_namaMakanan"
        android:hint="Nama Makanan"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_marginBottom="16sp"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ini Tanggalnya"
            android:textSize="16sp"
            android:id="@+id/tv_dialog_tanggal"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="..."
            android:id="@+id/btn_dialog_tanggal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/batal"
            android:id="@+id/btn_dialog_batal"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/simpan"
            android:id="@+id/btn_dialog_simpan"/>
    </LinearLayout>

</LinearLayout>